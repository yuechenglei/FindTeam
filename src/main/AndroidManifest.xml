<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sdu.online.findteam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activity.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activity.MainActivity"/>

        <activity
            android:name=".activity.InfoPersonActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent"/>

        <activity android:name=".activity.SingleCompetitionActivity" />

        <activity android:name=".activity.OtherTeamActivity" />

        <activity
            android:name=".activity.TeamLogActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".activity.MyTeamActivity" />

        <activity android:name=".activity.WriteActivity" />

        <activity android:name=".activity.MyMessageActivity" />

        <activity android:name=".activity.FriendActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
