<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/visitor_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/blue_color"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:clickable="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/visitor_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/visit_btn_bg"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:text="登录"
            android:textColor="@color/white_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitor_allgame_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_games"
                android:layout_width="@dimen/draw_button_h"
                android:layout_height="@dimen/draw_button_h"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/team_games" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="所有比赛"
                android:textColor="@color/white_color"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visitor_hotgame_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_hot"
                android:layout_width="@dimen/draw_button_h"
                android:layout_height="@dimen/draw_button_h"
                android:background="@drawable/hot_competition_icon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="热门赛事"
                android:textColor="@color/white_color"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visitor_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_set"
                android:layout_width="@dimen/draw_button_h"
                android:layout_height="@dimen/draw_button_h"
                android:background="@drawable/team_set" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:text="设置"
                android:textColor="@color/white_color"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>