<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/bg_register">
    <LinearLayout
        android:id="@+id/linearlayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_weight="2.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="用户名"
            android:textColor="#000000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/register_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:hint="用户名"
            android:textSize="17sp"
            android:textColorHint="@color/textcolor_gray"
            android:textColor="#000000"
            android:background="@drawable/frame_black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_name"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_weight="2.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="邮箱"
            android:textColor="#000000"
            android:gravity="center"/>
        <cn.sdu.online.findteam.view.AutoCompleteEmailEdit
            android:id="@+id/register_email"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱号"
            android:textColorHint="@color/textcolor_gray"
            android:textColor="#000000"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17sp"
            android:background="@drawable/frame_black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_email"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_weight="2.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="密码"
            android:textColor="#000000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/register_password"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:hint="密码"
            android:textSize="17sp"
            android:textColorHint="@color/textcolor_gray"
            android:textColor="#000000"
            android:background="@drawable/frame_black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_confirmcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_code"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_weight="2.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="确认密码"
            android:textColor="#000000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/register_confirm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:textColorHint="@color/textcolor_gray"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17sp"
            android:background="@drawable/frame_black"/>
    </LinearLayout>

    <Button
        android:id="@+id/registerac_register_btn"
        android:layout_below="@+id/linearlayout_confirmcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/register"
        android:text="确认"
        android:textSize="17sp"/>

</RelativeLayout>
