<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:text="@string/chat_create_tips"
            android:textColor="#000" />

        <cn.sdu.online.findteam.view.ClearableEditText
            android:id="@+id/et_create_chat"
            style="@style/edittext_style"
            android:layout_marginTop="10dp"
            android:hint="@string/chat_create_openIdHint" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/login_divider" />

        <Button
            android:id="@+id/btn_create_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/simplecompetition_button_bg"
            android:textColor="@color/singlecompetiton_buttontext_bg"
            android:minHeight="48dp"
            android:text="@string/btn_ok" />

    </LinearLayout>

</LinearLayout>