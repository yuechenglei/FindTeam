<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.sdu.online.findteam.view.SingleCompetitionListView
        android:id="@+id/teamheader_log_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/teamheader_writelog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/simplecompetition_button_bg"
        android:text="写日志"
        android:textColor="@color/singlecompetiton_buttontext_bg"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>