<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/myteam_list_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <cn.sdu.online.findteam.resource.RoundImageView
            android:id="@+id/myteam_teamHeader"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/singlecompetition_itemimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myteam_teamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="队员"
                android:lines="1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/myteam_teamIntroduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="队伍简介"
                android:textColor="@color/textcolor_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:padding="5dp"
        android:background="#f3a1ab">

        <TextView
            android:id="@+id/myteam_parentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比赛名称"
            android:textColor="@color/white_color"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>