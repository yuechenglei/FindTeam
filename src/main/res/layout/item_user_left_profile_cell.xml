<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_common_white_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_user_profile_cell_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:minWidth="70dp"
            android:minHeight="64dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:singleLine="false"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/item_user_profile_cell_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:minHeight="64dp"
            android:layout_toRightOf="@id/item_user_profile_cell_title_tv"
            android:layout_alignParentRight="true"
            android:layout_gravity="center|right"
            android:paddingRight="12dp"
            android:gravity="center|right"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="8dp"
            android:background="@color/divider_dark_gray" />
    </LinearLayout>

</LinearLayout>