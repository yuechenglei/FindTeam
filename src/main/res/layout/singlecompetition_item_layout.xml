<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singlecp_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/singlecompetition_itemimg"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue_color">

            <TextView
                android:id="@+id/singlecp_item_teamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵亮夜行队"
                android:textColor="@color/white_color"
                android:textSize="7pt"/>
            <TextView
                android:id="@+id/singlecp_item_personnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺2人"
                android:textSize="7pt"
                android:textColor="@color/white_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:id="@+id/singlecp_item_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textcolor_gray"/>

        <TextView
            android:id="@+id/singlecp_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_gray"
            android:text="“南航E行”团队是一支充满激情、踏实肯干、有着创新精神的团队。这个队名也很朴实，我们赋予了她深深的感情。南航是我们的母校，是授以我们知识的地方，也是莘莘学子寻梦的地方。e行是我们参赛的态度，也是我们做人做事的信念。相信只要我们不放弃，不抛弃，走到最后我们还是e路通行。"
            android:maxLines="3"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <View
            android:id="@+id/singlecp_item_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textcolor_gray"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/singlecp_item_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看队伍"
                android:textSize="7pt"
                android:textColor="@color/blue_color"
                android:background="@drawable/singlecompetition_buttonshape"/>

            <Button
                android:id="@+id/singlecp_item_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入队伍"
                android:textSize="7pt"
                android:textColor="@color/blue_color"
                android:background="@drawable/singlecompetition_buttonshape"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>