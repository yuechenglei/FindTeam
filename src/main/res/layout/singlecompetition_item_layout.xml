<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">

    <cn.sdu.online.findteam.resource.RoundImageView
        android:id="@+id/singlecp_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/singlecompetition_itemimg"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue_color">

            <TextView
                android:id="@+id/singlecp_item_teamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵亮夜行队"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white_color"
                android:textSize="7pt"/>
            <TextView
                android:id="@+id/singlecp_item_personnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺2人"
                android:textSize="7pt"
                android:textColor="@color/white_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:id="@+id/singlecp_item_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textcolor_gray"/>

        <TextView
            android:id="@+id/singlecp_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_gray"
            android:text="“我们是e路通行。"
            android:lines="3"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <View
            android:id="@+id/singlecp_item_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textcolor_gray"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/singlecp_item_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看队伍"
                android:textSize="7pt"
                android:textColor="@color/singlecompetiton_buttontext_bg"
                android:background="@drawable/simplecompetition_button_bg"/>

            <Button
                android:id="@+id/singlecp_item_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入队伍"
                android:textSize="7pt"
                android:textColor="@color/singlecompetiton_buttontext_bg"
                android:background="@drawable/simplecompetition_button_bg"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>