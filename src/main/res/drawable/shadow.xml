<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影部分 -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_pressed34"/>
        </shape>
    </item>

    <!-- 背景部分 -->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
</layer-list>
